<aside class="sidebar">
  <div class="profile-avatar">
    <img src="<%= user.avatar || '/assets/student.png' %>" alt="Profile photo">
  </div>
  <nav>
    <ul>
      <li class="<%= activePage === 'dashboard' ? 'active' : '' %>">
        <a href="/dashboard"><i class="fa fa-th-large"></i> Dashboard</a>
      </li>

      <!-- Projects always visible -->
      <li class="<%= activePage === 'projects' ? 'active' : '' %>">
        <a href="/projects"><i class="fa fa-file-alt"></i> Projects</a>
      </li>

      <li class="<%= activePage === 'courses' ? 'active' : '' %>">
        <a href="/courses"><i class="fa fa-chalkboard-teacher"></i> Courses</a>
      </li>

      <li class="<%= activePage === 'calendar' ? 'active' : '' %>">
        <a href="/calendar"><i class="fa fa-calendar-alt"></i> Calendar</a>
      </li>

      <li class="<%= activePage === 'reports' ? 'active' : '' %>">
        <a href="/reports"><i class="fa fa-chart-bar"></i> Reports</a>
      </li>
      <!-- Only show Reports if NOT learner -->
      <% if (user.role !== 'learner') { %>
      <li class="<%= activePage === 'learners' ? 'active' : '' %>">
        <a href="/learners"><i class="fa fa-graduation-cap"></i> Learners</a>
      </li>
      <% } %>

      <li class="<%= activePage === 'settings' ? 'active' : '' %>">
        <a href="/settings"><i class="fa fa-cog"></i> Settings</a>
      </li>
    </ul>
  </nav>
</aside>