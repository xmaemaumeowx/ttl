<%- include('partials/header', { pageTitle: 'Settings' }) %>
<link rel="stylesheet" href="/settings.css">
<%- include('partials/navbar') %>
<div class="dashboard">
  <%- include('partials/sidebar', { activePage: 'settings' }) %>
  <main class="settings-main">
    <h1 class="page-title">My Settings</h1>
    <p style="margin-bottom:1.3em;">Welcome, <span style="color:var(--accent-color)"><%= user.fullName %></span>!</p>
    <div class="settings-avatar-block">
      <img class="profile-avatar-img" src="<%= user.avatar || '/assets/student.png' %>" alt="Profile picture"/>
      <form action="/profile/avatar" method="POST" enctype="multipart/form-data">
        <label for="avatar">Update Avatar (max 20MB):</label>
        <input type="file" name="avatar" id="avatar" accept="image/*" required>
        <button type="submit">Upload</button>
      </form>
    </div>
    <div class="settings-form-section">
      <form action="/profile/update" method="POST">
        <label for="fullName">Full Name</label>
        <input type="text" id="fullName" name="fullName" value="<%= user.fullName %>" required>
        <label for="email">Email</label>
        <input type="email" id="email" name="email" value="<%= user.email %>" required>
        <button type="submit">Save Changes</button>
      </form>
    </div>
    <div class="settings-form-section">
      <form action="/profile/password" method="POST" autocomplete="off">
        <label for="currentPassword">Current Password</label>
        <input type="password" id="currentPassword" name="currentPassword" required>
        <label for="newPassword">New Password</label>
        <input type="password" id="newPassword" name="newPassword" required>
        <button type="submit">Reset Password</button>
      </form>
    </div>
  </main>
</div>

<div id="toast" class="toast"></div>
<script>
  window.toastMessage = <%- JSON.stringify(successMessage || errorMessage || '') %>;
  window.toastType = <%- JSON.stringify(errorMessage ? "error" : "success") %>;
</script>
<script src="/settings.js"></script>
<%- include('partials/footer') %>